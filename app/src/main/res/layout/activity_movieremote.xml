<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movieremote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dawson.mountgoodcontrol.MovieRemoteActivity"
    >

    <TextView
        android:id="@+id/textRemote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Remote"
        android:textSize="20pt"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="60dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buttonRemoteOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRemote"
        >

        <Button
            android:id="@+id/buttonPrevChapter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prev chapter"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonMoviePlayPause"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Play/Pause"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonNextChapter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next chapter"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buttonRemoteTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRemoteOne"
        >

        <Button
            android:id="@+id/buttonMedBack"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="60 seconds back"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonShortBack"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10 seconds back"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonVeryShortBack"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 seconds back"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonVeryShortForward"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 seconds forward"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonShortForward"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10 seconds forward"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

        <Button
            android:id="@+id/buttonMedForward"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="60 seconds forward"
            android:textColor="@color/colorPrimary"
            android:onClick="sendData"
            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonMovieStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRemoteTwo"
        android:layout_marginTop="40dp"
        android:text="Stop"
        android:textColor="@color/colorPrimary"
        android:onClick="sendData"
        />

</RelativeLayout>